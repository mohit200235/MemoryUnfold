<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    android:elevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayoutAddMemory"
        android:background="@drawable/backgroudn1">

        <ImageView
            android:id="@+id/surprise"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/gift_asset" />

        <ImageView
            android:id="@+id/surprise1"
            android:visibility="gone"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/gift_asset" />

        <Button
            android:id="@+id/memory_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/red1"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:gravity="center"
            android:padding="0dp"
            android:minLines="1"
            android:text="Ye starting vali feelings &#128525;"
            android:textSize="@dimen/_10ssp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>